# Stage 1: Build
FROM node:20-alpine AS builder

# 1Ô∏è‚É£ Set working directory
WORKDIR /usr/src/app

# 2Ô∏è‚É£ Copy package.json first
COPY package*.json ./

# 3Ô∏è‚É£ Install all dependencies (including dev)
RUN npm install

# 4Ô∏è‚É£ Copy source files
COPY . .

# 5Ô∏è‚É£ Compile TypeScript to JavaScript
RUN npm run build

# Stage 2: Production image
FROM node:20-alpine

WORKDIR /usr/src/app

# 6Ô∏è‚É£ Copy only package.json
COPY package*.json ./

# 7Ô∏è‚É£ Install only production dependencies
RUN npm install --production

# 8Ô∏è‚É£ Copy compiled JS from build stage
COPY --from=builder /usr/src/app/dist ./dist

# 9Ô∏è‚É£ Expose service port
EXPOSE 3002

# üîü Start the service
CMD ["node", "dist/index.js"]
